        <%= image_tag "projects/fairfax-eats.png", class: "project__logo" %>
        <h3 class="project__title fe__title">FairfaxEats</h3>
      </div>
      <div class="project__links">
        <%= link_to "Live Site", "#" %>
        <%= link_to "GitHub Repo", "#" %>
      </div>
      <div class="project__features">
        <%= link_to "Details", "#", class: "project__features-link" %>
      </div>
    </div>

  </div>
  <button class="btn btn--projects">
     See More on Github
  </button>
</section>