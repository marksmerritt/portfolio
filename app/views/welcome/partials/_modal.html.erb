<div class="modal" id="contact-modal">
  <div class="modal__content">
    <div class="modal__close-btn">+</div>
    <h3 class="contact-form__heading">
      Contact Me
    </h3>
    <%= form_with model: @message, class: "contact-form", id: "contact-form" do |f| %>
      <div class="contact-form__group">
        <%= f.label :name, class: "contact-form__label" %>
        <%= f.text_field :name, class: "contact-form__field contact-form__name-field", id: "name-field", autofocus: true %>
      </div>
      
      <div class="contact-form__group">
        <%= f.label :email, class: "contact-form__label" %>
        <%= f.email_field :email, class: "contact-form__field contact-form__email-field", id: "email-field" %>
      </div>
      
      <div class="contact-form__group">
        <%= f.label :body, "Message", class: "contact-form__label" %>
        <%= f.text_area :body, class: "contact-form__field contact-form__body-field", id: "body-field", rows: 5 %>
      </div>
      
      <%= f.submit "Send", class: "contact-form__submit-btn", id: "contact-submit" %>
    <% end %>
  </div>
</div>